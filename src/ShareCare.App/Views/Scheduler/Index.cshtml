@model ShareCare.Model.Models.SchedulerModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="col-md-12">
    <div class="card">
        <div class="card-header">@Model.Type.ToDisplayName()</div>
        <div class="card-body">
            <form asp-action="Index">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Specialties" class="control-label">Criar Conta</label>
                    @Html.DropDownListFor(m => m.Specialty, new SelectList(Model.Specialties), new { @class = "form-control" })
                    <span asp-validation-for="Specialties" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Title" class="control-label"></label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DateStart" class="control-label"></label>
                    <input type="datetime-local" asp-for="DateStart" class="form-control" />
                    <span asp-validation-for="DateStart" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DateEnd" class="control-label"></label>
                    <input type="datetime-local" asp-for="DateEnd" class="form-control" />
                    <span asp-validation-for="DateEnd" class="text-danger"></span>
                </div>

                @{ var length = Model.Specialties.Count();}
                @for (int i = 0; i < length; i++)
                {
                    <input type="hidden" readonly="readonly" asp-for="Specialties[i]" class="form-control" />
                }

                <input type="hidden" readonly="readonly" asp-for="Type" class="form-control" />
                <input type="hidden" readonly="readonly" asp-for="DoctorPatient.DoctorId" class="form-control" />
                <input type="hidden" readonly="readonly" asp-for="DoctorPatient.PatientId" class="form-control" />

                <div class="form-group">
                    <input type="submit" value="Salvar" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
