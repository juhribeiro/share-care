</head>

<body class="animsition">
    <div class="page-wrapper">
        <!-- PAGE CONTAINER-->
        <div class="page-container">
            <!-- MAIN CONTENT-->
            <div class="main-content">
                <div class="section__content section__content--p30">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-md-12">
                                <!-- DATA TABLE -->
                                <div class="table-data__tool">
                                    <div class="table-data__tool-right">
                                        <div class="rs-select2--light rs-select2--md">
                                            <select class="js-select2" name="property">
                                                <option selected="selected">Especialidades</option>
                                                <option value="">Cardiologista</option>
                                                <option value="">Oncologista</option>
                                            </select>
                                            <div class="dropDownSelect2"></div>
                                        </div>
                                        <div class="rs-select2--light rs-select2--sm">
                                            <select class="js-select2" name="time">
                                                <option selected="selected">Horarios</option>
                                                <option value="">7:00</option>
                                                <option value="">8:00</option>
                                                <option value="">9:00</option>
                                                <option value="">10:00</option>
                                            </select>
                                            <div class="dropDownSelect2"></div>
                                        </div>
                                    </div>
                                </div>
                                <div class="table-responsive table-responsive-data2">
                                    <table class="table table-data2">
                                        <thead>
                                            <tr>
                                                <th>Nome</th>
                                                <th>Email</th>
                                                <th>Especialidade</th>
                                                <th>Status</th>
                                                <th>Descrição</th>
                                                <th></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr class="tr-shadow">
                                                <td class="desc">Dr. Mauricio Souza</td>
                                                <td>
                                                    <span class="block-email">mauricio@example.com</span>
                                                </td>
                                                <td>Cardiologista</td>
                                                <td>
                                                    <span class="status--process">Livre</span>
                                                </td>
                                                <td>Especialista em cirurgias.</td>
                                                <td>
                                                    <div class="table-data-feature">
                                                        <button type="button" class="btn btn-primary"  data-toggle="modal" data-target="#myModal">Agendar</button>
                                                    </div>
                                                </td>
                                            </tr>
                                            <tr class="spacer"></tr>
                                            <tr class="tr-shadow">
                                                <td class="desc">Dra. Sabrina Bueno</td>
                                                <td>
                                                    <span class="block-email">sabrina@example.com</span>
                                                </td>
                                                <td>Oncologista</td>
                                                <td>
                                                    <span class="status--denied">Sem disponibilidade</span>
                                                </td>
                                                <td>Especialista em cirurgias cancerigenas.</td>
                                                <td>
                                                    <div class="table-data-feature">
                                                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal">Agendar</button>
                                                    </div>
                                                </td>
                                            </tr>
                                            <tr class="spacer"></tr>
                                            <tr class="tr-shadow">
                                                <td class="desc">Dra. Camila Matos</td>
                                                <td>
                                                    <span class="block-email">camila@example.com</span>
                                                </td>
                                                <td>Dermatologista</td>
                                                <td>
                                                    <span class="status--process">Livre</span>
                                                </td>
                                                <td>Especialista peles.</td>
                                                <td>
                                                    <div class="table-data-feature">
                                                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal">Agendar</button>
                                                    </div>
                                                </td>
                                            </tr>
                                            <tr class="spacer"></tr>
                                            <tr class="tr-shadow">
                                                <td class="desc">Dr. Pedro Carvalho</td>
                                                <td>
                                                    <span class="block-email">pedro@example.com</span>
                                                </td>
                                                <td>Urologista</td>
                                                <td>
                                                    <span class="status--process">Livre</span>
                                                </td>
                                                <td>Especialista em cirurgias.</td>
                                                <td>
                                                    <div class="table-data-feature">
                                                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal">Agendar</button>
                                                    </div>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                                <!-- END DATA TABLE -->
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>

    <div id="myModal" class="modal fade" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title">Agendar</h1>
                </div>
                <div class="modal-body">
                    <form role="form" method="POST" action="">
                        <input type="hidden" name="_token" value="">
                        <div class="form-group">
                            <label class="control-label">Título</label>
                            <div>
                                <input type="text" class="form-control input-lg" name="email" value="">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Médico</label>
                            <div>
                                <input type="text" class="form-control input-lg" name="email" value="">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="rs-select2--light rs-select2--md">
                                <select class="js-select2" name="property">
                                    <option selected="selected">Especialidade</option>
                                    <option value="">Cardiologista</option>
                                    <option value="">Oncologista</option>
                                </select>
                                <div class="dropDownSelect2"></div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Descrição</label>
                            <div>
                                <input type="text" class="form-control input-lg" name="description" value="">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Início</label>
                            <div>
                                <input type="datetime-local" class="form-control input-lg" name="dateStart">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Término</label>
                            <div>
                                <input type="datetime-local" class="form-control input-lg" name="dateEnd">
                            </div>
                        </div>
                        <div class="form-group">
                            <div>
                                <button type="submit" class="btn btn-success" asp-area="" asp-controller="MedicalGuide" asp-action="SaveSchedule">Confirmar</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div>

    <!-- Jquery JS-->
    <script src="~/vendor/jquery-3.2.1.min.js"></script>
    <!-- Bootstrap JS-->
    <script src="~/vendor/bootstrap-4.1/popper.min.js"></script>
    <script src="~/vendor/bootstrap-4.1/bootstrap.min.js"></script>
    <!-- Vendor JS       -->
    <script src="~/vendor/slick/slick.min.js">
    </script>
    <script src="~/vendor/wow/wow.min.js"></script>
    <script src="~/vendor/animsition/animsition.min.js"></script>
    <script src="~/vendor/bootstrap-progressbar/bootstrap-progressbar.min.js">
    </script>
    <script src="~/vendor/counter-up/jquery.waypoints.min.js"></script>
    <script src="~/vendor/counter-up/jquery.counterup.min.js">
    </script>
    <script src="~/vendor/circle-progress/circle-progress.min.js"></script>
    <script src="~/vendor/perfect-scrollbar/perfect-scrollbar.js"></script>
    <script src="~/vendor/chartjs/Chart.bundle.min.js"></script>
    <script src="~/vendor/select2/select2.min.js">
    </script>

    <!-- Main JS-->
    <script src="~/js/main.js"></script>

</body>

</html>
